{
    "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "C/C++: g++ build active file Linux",
      "command": "/usr/bin/g++",
      "args": ["-g", "${file}", "-shared", "-o", "${workspaceFolder}/../bin/gorchan.so"],
      "options": {
        "cwd": "/usr/bin"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    },
    {
      "type": "shell",
      "label": "C/C++: g++ build active file Windows",
      "command": "g++",
      "args": ["-g",
      "-v",
       "-fPIC",
        "-shared",
         "-o", 
         "${workspaceFolder}/../bin/gorchan.dll", 
         "${workspaceFolder}/*.cpp"],
      "options": {
        "cwd": "C:\\gcc\\bin"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    }
  ]
}